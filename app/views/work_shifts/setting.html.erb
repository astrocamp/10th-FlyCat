<div class="w-full bg-white">
  <%= content_tag :div, data: { controller: 'calendar' } do %>
    <%= content_tag :div, class: 'modal bg-white', data: { target: 'calendar.modal' } do %>
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <%= form_with(model: Event.new , url:events_path(@work_shift.id),  method: 'post', local: true) do |form| %>
            <div class="modal-body">
              <div class="field">
                <%= form.label :mode, "模式" %>
                <%= form.select :mode , Event.all_mode %>
                <%= form.label :all_day, "全日" %>
                <%= form.check_box :all_day %>
              </div>

                <div class="field", data: { target: 'calendar.start_time' }>
                  <%= form.label :start_time, "開始時間" %>
                  <%= form.datetime_select :start_time %>
                </div>
    
                <div class="field", data: { target: 'calendar.end_time' }>
                  <%= form.label :end_time, "結束時間" %>
                  <%= form.datetime_select :end_time %>
                </div>
    
                <div class="field">
                  <%= form.label :title, "標題" %>
                  <%= form.text_field :title %>
                </div>

                <div class="field">
                  <%= form.label :content, "內容" %>
                  <%= form.text_field :content %>
                </div>

                <div class="field">
                  <%= form.label :vacation_set, "休假設定" %>
                  <%= form.select :vacation_set , Event.all_vacation_set %>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <%= form.submit t("新增班表"), class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <div data-target="calendar.calendar" class="w-5/6 pb-5 mx-auto"></div>
  <% end %>
</div>

<div class="flex items-start justify-center w-full h-screen bg-gray-200">
  <%= form_with(model: vacation) do |form| %>
    <% if vacation.errors.any? %>
        <ul>
          <% vacation.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>    
    <div class="w-screen max-w-xl px-10 pt-2 mb-16 bg-white shadow-md rounded-xl ">
      <h1 class="pb-3 mt-8 font-bold text-center text-gray-500">假單詳情</h1>
      <div class="field">
        <%= form.label :vacation_at,"請假日期",class: "block mb-1 font-semibold text-gray-600 pt-3" %>
        <%= form.date_field :vacation_at %>
      </div>
      
      <div class="field">
        <%= form.label :vacation_type,"假別",class: "block mb-1 font-semibold text-gray-600 pt-3" %>
        <%= form.select :vacation_type, Vacation.vacation_types %>
      </div>

      <div class="field">
        <%= form.label :hour,"請假時數",class: "block mb-1 font-semibold text-gray-600 pt-3" %>
        <p class="text-red-700">請整天假者，不需調整時數。非請整天者，請依實際時數選擇</p>
        <%= form.number_field :hour,min:0.5,max:8.0, step: 0.5, value: 8 %>
      </div>
      
      <div class="field">
        <%= form.label :reason,"請假事由",class: "block mb-1 font-semibold text-gray-600 pt-3" %>
        <%= form.text_field :reason,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50"%>
      </div>

      <div>
        <%= form.label :proof, "請假證明",class: "block mb-1 font-semibold text-gray-600 pt-3" %>
        <%= form.file_field :proof %>
      </div>

      <div class="flex justify-center py-6 actions">
        <%= link_to '返回前頁', vacations_path, class: "cancel-btn" %>
        <%= form.submit class: "add-btn" %>
      </div>
    <% end %>
  </div>
</div>
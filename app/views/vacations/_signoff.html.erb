<div class="fixed top-0 left-0 w-full h-full overflow-x-hidden overflow-y-auto bg-black bg-opacity-50 outline-none modal fade" id="vacation_show" tabindex="-1" data-controller="modal">
  <div class="relative w-auto h-full opacity-100 pointer-events-none modal-dialog modal-dialog-centered">
    <div class="absolute flex flex-col m-auto overflow-x-auto text-current transform -translate-x-1/2 -translate-y-1/2 bg-white border-none rounded-md shadow-lg outline-none pointer-events-auto top-1/2 left-1/2 max-w-min md:w-1/2 xl:max-w-xl">
      <%= form_with(model: vacation,url: signoff_completed_vacation_path ,method: 'post',data: {remote: true}) do |form| %>
        <div class="px-10 pt-2 shadow-md sm:w-screen md:max-w-full rounded-xl whitespace-nowrap">
          <h1 class="pb-3 mt-8 font-bold text-center text-gray-500"><%= t('假單簽核') %></h1>
          <div class="py-1 field">
        <strong><%= form.label :vacation_at, t("請假日") %></strong>
        <%= form.date_field :vacation_at,readonly: :true %>
        </div>
        <div class="py-1 field">
          <strong><%= form.label :vacation_type, t("假別") %></strong>
          <%= form.text_field :vacation_type ,readonly: :true %>
        </div>

        <div class="py-1 field">
          <strong><%= form.label :status, t("狀態") %></strong>
          <%= form.select :status , Vacation.vacation_statuses %>
        </div>

        <div class="py-1 field">
          <strong><%= form.label :reason, t("請假事由") %></strong>
          <%= form.text_field :reason,readonly: :true %>
        </div>
        
        <div class="py-1 field">
          <strong><%= form.label :proof, t("證明") %></strong>
          <%= link_to t('點此查看請假證明'), @vacation.proof,class: "mb-1 font-semibold text-blue-600 pt-3", target: "_blank" if @vacation.proof.attached? %>
          <%= '未提供證明' unless @vacation.proof.attached? %>
        </div>
          <div class="flex justify-end py-6 actions">
            <%= link_to t('取消'), vacations_path, class: "py-2 px-6 mt-4 text-lg tracking-wide text-gray-700 text-bold rounded-md bg-gray-300  mr-6 hover:bg-gray-400" %>
            <%= form.submit t("更新假單"), class: "py-2 px-6 mt-4 text-lg tracking-wide text-indigo-100 cursor-pointer rounded-md bg-indigo-600 hover:bg-indigo-700"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
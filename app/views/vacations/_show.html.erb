<div class="modal fade fixed top-0 left-0  w-full h-full outline-none overflow-x-hidden overflow-y-auto bg-opacity-50 bg-black" id="vacation_show" tabindex="-1" data-controller="modal">
  <div class="modal-dialog modal-dialog-centered relative w-auto pointer-events-none h-full opacity-100">
    <div class="border-none shadow-lg absolute top-1/2 left-1/2 transform -translate-y-1/2 -translate-x-1/2 flex flex-col w-1/2 pointer-events-auto bg-white rounded-md outline-none text-current mx-auto my-auto">
    <div class="px-5 py-3" >
      <div class="py-1 field">
        <strong>休假日:</strong>
        <%= @vacation.vacation_at %>
      </div>
      
      <div class="py-1 field">
        <strong>假別:</strong>
        <%= @vacation.vacation_type %>
      </div>

      <div class="py-1 field">
        <strong>狀態:</strong>
        <%= @vacation.status %>
      </div>

      <div class="py-1 field">
        <strong>請假事由:</strong>
        <%= @vacation.reason if policy(:vacation).show? %>
      </div>

      <div class="py-1 field">
        <strong>請假證明:</strong>
        <%= link_to '點此查看請假證明', @vacation.proof,class: "mb-1 font-semibold text-blue-600 pt-3", target: "_blank" if @vacation.proof.attached? %>
        <%= '未提供證明' unless @vacation.proof.attached? %>
      </div>
    </div>
      <div
        class="modal-footer flex flex-shrink-0 flex-wrap items-center justify-end p-4 border-t border-gray-200 rounded-b-md">

        <button type="button"
          class="inline-block px-6 py-2.5 bg-purple-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-purple-700 hover:shadow-lg focus:bg-purple-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-purple-800 active:shadow-lg transition duration-150 ease-in-out" data-action="click->modal#close">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
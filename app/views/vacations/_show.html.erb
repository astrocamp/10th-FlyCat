
   
<div class="fixed top-0 left-0 w-full h-full overflow-x-hidden overflow-y-auto bg-black bg-opacity-50 outline-none modal fade" id="vacation_show" tabindex="-1" data-controller="modal">
  <div class="relative w-auto h-full overflow-auto opacity-100 pointer-events-none modal-dialog modal-dialog-centered">
    <div class="absolute flex flex-col mx-auto text-current transform -translate-x-1/2 -translate-y-1/2 bg-white border-none rounded-md shadow-lg outline-none pointer-events-auto top-1/2 left-1/2 max-w-min md:w-1/2 xl:max-w-xl ">
    <div class="px-5 py-3 sm:w-screen md:max-w-full" >
      <div class="py-1 field whitespace-nowrap">
        <strong><%= t('休假日') %>:</strong>
        <%= @vacation.vacation_at %>
      </div>
      
      <div class="py-1 field whitespace-nowrap">
        <strong><%= t('假別') %>:</strong>
        <%= @vacation.vacation_type %>
      </div>

      <div class="py-1 field whitespace-nowrap">
        <strong><%= t('狀態') %>:</strong>
        <% if @vacation.status == "approved" %>
        <span><%= t('同意') %></span>
        <% elsif @vacation.status == "rejected" %>
          <span><%= t('駁回') %></span>
        <% else %>
          <span><%= t('待簽核') %></span>
        <% end %>
      </div>

      <div class="py-1 field whitespace-nowrap">
        <strong><%= t('請假事由') %>:</strong>
        <%= @vacation.reason if policy(:vacation).show? %>
      </div>

      <div class="py-1 field whitespace-nowrap">
        <strong><%= t('請假證明') %>:</strong>
        <%= link_to t('點此查看請假證明'), @vacation.proof,class: "mb-1 font-semibold text-blue-600 pt-3", target: "_blank" if @vacation.proof.attached? %>
        <%= t('未提供證明') unless @vacation.proof.attached? %>
      </div>
    </div>
      <div
        class="flex flex-wrap items-center justify-end flex-shrink-0 p-4 border-t border-gray-200 modal-footer rounded-b-md">

        <button type="button"
          class="inline-block px-6 py-2.5 bg-purple-600 text-white font-medium text-s leading-tight uppercase rounded shadow-md hover:bg-purple-700 hover:shadow-lg focus:bg-purple-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-purple-800 active:shadow-lg transition duration-150 ease-in-out" data-action="click->modal#close">
          <%= t('關閉') %>
        </button>
      </div>
    </div>
  </div>
</div>
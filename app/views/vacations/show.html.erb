<div class="flex items-start justify-center w-full h-screen text-xl bg-gray-200">
  <p id="notice"><%= notice %></p>
  <div class="w-full max-w-xl px-10 mt-10 mb-16 bg-white shadow-md rounded-xl ">
    <h1 class="pb-3 mt-8 font-bold text-center text-gray-500">假單詳情</h1>
    <div class="py-1 field">
      <strong>休假日:</strong>
      <%= @vacation.vacation_at %>
    </div>
    
    <div class="py-1 field">
      <strong>假別:</strong>
      <%= @vacation.vacation_type %>
    </div>

    <div class="py-1 field">
      <strong>狀態:</strong>
        <% if @vacation.status == "approved" %>
          <span>同意</span>
        <% elsif @vacation.status == "rejected" %>
          <span>駁回</span>
        <% else %>
          <span>待簽核</span>
        <% end %>
    </div>

    <div class="py-1 field">
      <strong>請假事由:</strong>
      <%= @vacation.reason if policy(:vacation).show? %>
    </div>

    <div class="py-1 field">
      <strong>請假證明:</strong>
      <%= link_to '點此查看請假證明', @vacation.proof,class: "mb-1 font-semibold text-blue-600 pt-3", target: "_blank" if @vacation.proof.attached? %>
      <%= '未提供證明' unless @vacation.proof.attached? %>
    </div>
    <div class="flex justify-center my-8">
      <%= link_to '返回前頁', vacations_path, class: "cancel-btn" %>
      <%= link_to '編輯假單', edit_vacation_path(@vacation), class: "add-btn" %>
    </div>
  </div>
</div>
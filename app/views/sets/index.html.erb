<%= content_tag :div, data: { controller: 'calendar' } do %>
    <%= content_tag :div, class: 'modal', data: { target: 'calendar.modal' } do %>
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <%= form_with(model: Event.new , url:events_path(@work_shift.id),  method: 'post', local: true) do |form| %>
            <div class="modal-body">
              <div class="field">
                <%= form.label :all_day, "全日" %>
                <%= form.check_box :all_day %>
              </div>
  
              <div class="field">
                <%= form.label :start_time, "開始時間" %>
                <%= form.text_field :start_time, data: { target: 'calendar.start_time' } %>
              </div>
  
              <div class="field">
                <%= form.label :end_time, "結束時間" %>
                <%= form.text_field :end_time, data: { target: 'calendar.end_time' } %>
              </div>
  
              <div class="field">
                <%= form.label :title, "標題" %>
                <%= form.text_field :title %>
              </div>
            </div>
            <div class="modal-footer">
              <%= form.submit class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  
    <%= tag :div, data: { target: 'calendar.calendar' } %>
  <% end %>
  <%= link_to '返回工作表', work_shifts_path %>
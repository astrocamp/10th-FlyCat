<h1>新增部門</h1>

<%= form_with(model: @department, url:admin_departments_path, method: 'post') do |form| %>
  <% if @department.errors.any?  %>
    <ul>
      <% @department.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="field">
    <%= form.label :department_name, "部門名稱" %>
    <%= form.text_field :department_name %>
  </div>

    <div class="actions">
    <%= form.submit %>
    </div>

<% end %>

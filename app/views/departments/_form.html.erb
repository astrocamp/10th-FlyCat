<div class="modal fade fixed top-0 left-0  w-full h-full outline-none overflow-x-hidden overflow-y-auto bg-opacity-50 bg-black" tabindex="-1" data-controller="modal">
  <div class="modal-dialog modal-dialog-centered relative w-auto pointer-events-none h-full opacity-100 overflow-auto">
    <div class="border-none shadow-lg absolute top-1/2 left-1/2 transform -translate-y-1/2 -translate-x-1/2 flex flex-col max-w-min md:w-1/2 xl:max-w-xl pointer-events-auto bg-white rounded-md outline-none text-current m-auto ">
      <%= form_with(model: department) do |form| %>  
      <div class=" sm:w-screen md:max-w-full px-10 pt-2 bg-white shadow-md rounded-xl whitespace-nowrap  ">
          <h1 class="pb-3 mt-8 font-bold text-gray-500 text-left ">部門詳情</h1>
          <div class="field mb-5">
            <%= form.label :department_name, "部門名稱",class: "mb-1 font-semibold text-gray-600 pt-3" %>
            <%= form.text_field :department_name,class:"p-1 sm:p-3 mt-4 leading-none text-gray-900 bg-gray-100 border border-gray-200 rounded focus:outline-none focus:border-blue-700" %>
          </div>
          
          <div class="flex justify-end py-2 actions border-t-2">
            <%= link_to '取消', departments_path, class: "py-2 px-6 mt-4 text-lg tracking-wide text-gray-700 text-bold rounded-md bg-gray-300  mr-6" %>
            <%= form.submit  class: "py-2 px-6 mt-4 text-lg tracking-wide text-indigo-100 cursor-pointer rounded-md bg-gradient-to-tr from-blue-600 to-indigo-600 "%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
